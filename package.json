{
  "name": "israeli-law-rag",
  "version": "1.0.0",
  "private": true,
  "description": "RAG (Retrieval-Augmented Generation) system for Israeli law documents",
  "type": "module",
  "workspaces": [
    "lib",
    "api",
    "scripts",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev -w @israeli-law-rag/frontend",
    "dev:api": "vercel dev",
    "build": "npm run build -w @israeli-law-rag/lib && npm run build -w @israeli-law-rag/api && npm run build -w @israeli-law-rag/frontend",
    "build:lib": "npm run build -w @israeli-law-rag/lib",
    "build:api": "npm run build -w @israeli-law-rag/api",
    "build:frontend": "npm run build -w @israeli-law-rag/frontend",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.vue --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "clean": "rm -rf node_modules api/node_modules lib/node_modules scripts/node_modules frontend/node_modules dist",
    "typecheck": "tsc --noEmit",
    "typecheck:lib": "npm run typecheck -w @israeli-law-rag/lib",
    "typecheck:api": "npm run typecheck -w @israeli-law-rag/api",
    "process-pdfs": "npm run process-pdfs -w @israeli-law-rag/scripts",
    "create-collection": "npm run create-collection -w @israeli-law-rag/scripts",
    "create-indexes": "npm run create-indexes -w @israeli-law-rag/scripts",
    "migrate": "npm run migrate -w @israeli-law-rag/scripts",
    "migrate:up": "npm run migrate:up -w @israeli-law-rag/scripts",
    "migrate:down": "npm run migrate:down -w @israeli-law-rag/scripts",
    "migrate:status": "npm run migrate:status -w @israeli-law-rag/scripts"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vitest": "^1.3.0",
    "vue-eslint-parser": "^9.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
